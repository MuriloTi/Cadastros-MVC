@model Cadastros.Application.ViewModels.RelatorioClientesViewModel

<h1>Relatório de Clientes</h1>

@foreach (var cidade in Model.Cidades)
{
    <div class="card shadow-lg mt-4">
        <div class="card-header">
            <h5>@cidade.Cidade (@cidade.Clientes.Count)</h5>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Código</th>
                        <th>Nome</th>
                        <th>Endereço</th>
                        <th>Telefone</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cliente in cidade.Clientes)
                    {
                        <tr>
                            <td>@cliente.Id</td>
                            <td>@cliente.Codigo</td>
                            <td>@cliente.Nome</td>
                            <td>@cliente.GetEnderecoCompleto()</td>
                            <td>@cliente.Telefone</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}